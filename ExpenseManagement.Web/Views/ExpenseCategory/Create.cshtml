@model ExpenseCategory;
@{
    ViewData["Title"] = "Expense Creation";
}

<form method="post" action="Create">
    <div class="border p-5">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div><h2>Record your Expenses</h2></div>
   
    <div class="col-5">
        <label asp-for="ExpenseCategoryName"></label>
        <input asp-for="ExpenseCategoryName" class="form-control" />
        <span asp-validation-for="ExpenseCategoryName" class="text-danger"></span>
    </div>
    <div class="row"></div>
    <div class="col-5">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-light">Back</a>
    </div>
     </div>
</form>
