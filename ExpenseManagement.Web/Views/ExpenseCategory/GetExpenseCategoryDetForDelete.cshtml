@model ExpenseCategory;
@{
    ViewData["Title"] = "Expense Category Delete";
}

<form method="post" asp-action="Delete">
    <div>
        <div class="row">
            <div class="col-5">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <h2>Remove Expense Class</h2>
            </div>
        </div>
        <div class="row">
            <input asp-for="ExpenseCategoryId" hidden />
            <div class="col-5">
                <label asp-for="ExpenseCategoryName"></label>
                <input asp-for="ExpenseCategoryName" class="form-control"/>
                <span asp-validation-for="ExpenseCategoryName"></span>
            </div>

           
        </div>
        <div class="row" role="group">
            <div class="col-4">

                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>
           
        </div>
    </div>
</form>
