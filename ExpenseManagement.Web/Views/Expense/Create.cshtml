@model Expense

@{
    
    ViewData["Title"] = "Create New Expenses";
}


    <form method="post" asp-action="Create">

    <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
            <div>
                <h2>Record your Expense</h2>
            </div>
            <br/>

            <div class="row">
                <div>
                    <label asp-for="ExpenseDate"></label>
                    <input asp-for="ExpenseDate" class="form-control datetimepicker" />
                    <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div>
                    <label asp-for="ExpenseCategoryId"></label>
                <select asp-for="ExpenseCategoryId" asp-items="@ViewBag.PopulateExpenseCate" class="form-control">
                    <option selected>--Select Expense Category--</option>
                     @* @foreach (var item in ViewBag.PopulateExpenseCate)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }*@

                </select>
                    <span asp-validation-for="ExpenseGivenTo" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="row">
                <div>
                    <label asp-for="ExpenseGivenTo"></label>
                    <input asp-for="ExpenseGivenTo" class="form-control" />
                    <span asp-validation-for="ExpenseGivenTo" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="row">
                <div>
                    <label asp-for="ExpenseAmount"></label>
                    <input asp-for="ExpenseAmount" class="form-control" />
                    <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
                </div>
            </div>
            <br/>

            <div role="group">
                <input type ="submit" value="Save" />
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>

       
    </div>
</form>



