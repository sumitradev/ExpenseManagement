@{
}
@model UserProfile

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "User Registration";
}

<form method="post" asp-action="Registration">
    <div class="container align-content-center">
        <div class="row">
            <div asp-validation-summary="ModelOnly"></div>
            <h1>User Registration Form</h1>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="UserPhone"></label>
                <input asp-for="UserPhone" class="form-control" />
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="UserEmail"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="UserPassword"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <br/>
        </div>
        <div class="row">
            <div class="col-4">
        
                <input type="submit" class="btn btn-primary" value="Save" />

                <a asp-controller="UserProfile" asp-action="Login" value="Cancel" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
